<div class="container-fluid">
  <p>Worker#index</p>

  <p>
    <%= @day.strftime("%m/%d(%a)") %>
  </p>

  <table class="table table-hover">
    <thead>
    <tr>
      <th scope="row">名前</th>
      <th scope="row">空き時間</th>
    </tr>
    </thead>

    <tbody>
    <% @workers.each do |worker| %>
      <% schedule = worker.schedules.of(@day).first %>

      <tr>
        <th scope="row"><%= worker.email %></th>
        <td>
          <div class="row">
            <div class="col-auto">
              <% if schedule.nil? %>
              ー
              <% else %>
                <%= link_to schedule.to_string, "#" %>
              <% end %>
            </div>
          </div>
        </td>
      </tr>

    <% end %>
    </tbody>
  </table>
</div>
